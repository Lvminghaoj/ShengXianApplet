}

function getPhone() {
    if (wx.getStorageSync('phone') == undefined || wx.getStorageSync('phone') == null || wx.getStorageSync('phone') == '') {
        wx.showToast({ title: '您尚未登录', icon: 'none' })
        return;
    }
}


function newPostData(url, data) {
    return new Promise((resolve, reject) => {
        wx.request({
            //项目的真正接口，通过字符串拼接方式实现
            url: url,
            header: {
                "content-type": "application/json;charset=UTF-8"
            },
            data: data,
            method: 'POST',
            success(res) {
                let data = res.data;
                if (data.code == 200) {
                    let dataPost = data.data;
                    if (dataPost == [] || dataPost == null || dataPost == '' || dataPost == undefined) {
                        reject(data);
                        // wx.showToast({
                        //     title: data.message,
                        //     icon: 'none',
                        //     duration: 2000
                        // })
                    } else {
                        console.log(11111)
                        resolve(dataPost);
                    }
                } else {
                    wx.showToast({
                        title: data.message,
                        icon: 'none',
                        duration: 2000
                    })
                }
            }
        })
    })
}


