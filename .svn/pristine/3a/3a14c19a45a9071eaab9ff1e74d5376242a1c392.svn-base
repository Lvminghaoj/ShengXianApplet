//GET请求，不需传参，直接URL调用，
function getData(url, fn) {
    wx.request({
        url: url,
        header: {
            "content-type": "application/json;charset=UTF-8"
        },
        method: 'GET',
        success(res) {
            let data = res.data;
            if (data.code == 200) {
                let dataPost = data.data;
                if (dataPost == [] || dataPost == null || dataPost == '') {
                    wx.showToast({
                        title: '暂无数据',
                        icon: 'none',
                        duration: 2000
                    })
                } else {
                    fn(dataPost)
                }
            } else {
                wx.showToast({
                    title: res.message,
                    icon: 'none',
                    duration: 2000
                })
            }
        }
    })
}

function ChooImg(url, temFilePath, fn, Fail) {
