function postData(url, data, Fn, Fail) {
    wx.request({
        //项目的真正接口，通过字符串拼接方式实现
        url: url,
        header: {
            "content-type": "application/json;charset=UTF-8"
        },
        data: data,
        method: 'POST',
        success(res) {
            let data = res.data;
            if (data.code == 200) {
                let dataPost = data.data;
                if (dataPost == [] || dataPost == null || dataPost == '' || dataPost == undefined) {
                    Fail(data);
                    // wx.showToast({
                    //     title: data.message,
                    //     icon: 'none',
                    //     duration: 2000
                    // })
                } else {
                    console.log(11111)
                    Fn(dataPost);
                }
            } else {
                wx.showToast({
                    title: res.message,
                    icon: 'none',
                    duration: 2000
                })
            }
        }
    })
}
