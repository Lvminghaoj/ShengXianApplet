page {
    background: rgba(244, 243, 243, 1);
}

.container {
    width: 690rpx;
    margin: 30rpx;
}

.conBoxTop {
    width: 100%;
    height: 100rpx;
    background: white;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.conFont {
    margin-left: 40rpx;
    font-size: 28rpx;
    font-family: Source Han Sans CN;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
}

.conFontNum {
    margin-right: 40rpx;
    font-size: 28rpx;
    font-family: Source Han Sans CN;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    display: flex;
    align-items: center;
}

.num {
    font-size: 40rpx;
    font-family: DIN;
    font-weight: bold;
    color: rgba(51, 51, 51, 1);
    margin-right: 10rpx;
}

.box {
    width: 100%;
    height: 100rpx;
    background: white;
    display: flex;
    border-bottom: 1rpx solid rgba(244, 243, 243, 1);
    align-items: center;
}

.lookimg {
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx 40rpx;
    border-radius: 50%;
}

.zhanwei {
    width: 100%;
    height: 30rpx;
    background: rgba(244, 243, 243, 1);
}

.boxFont {
    font-size: 28rpx;
    font-family: Source Han Sans CN;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
}

.boxFonttime {
    font-size: 24rpx;
    font-family: Source Han Sans CN;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
}